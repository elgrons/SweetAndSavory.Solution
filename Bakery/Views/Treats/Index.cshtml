@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>All Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Kind}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<hr>
<p>@Html.ActionLink("Add a new treat", "Create") </p>

@using (Html.BeginForm("Search","Treats")) {
<label class="mdl-textfield__label" for="sample3">Search All Treats By Kind:</label>
<br>
<input class="mdl-textfield__input" type="text" name="search" id="sample3"><br><br>
<input type="submit" class="button" name = "search" value="Search Treats"/>
}

<hr>

<p>@Html.ActionLink("Home", "Index", "Home")</p>