@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>All Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<hr>

<p>@Html.ActionLink("Add a new flavor", "Create")</p>

<hr>

@using (Html.BeginForm("Search","Flavors")) {
<label class="mdl-textfield__label" for="sample3">Search All Flavors By Type:</label>
<br>
<input class="mdl-textfield__input" type="text" name="search" id="sample3"><br><br>
<input type="submit" class="button" name = "search" value="Search Flavors"/>
}

<hr>

<p>@Html.ActionLink("Home", "Index", "Home")</p>