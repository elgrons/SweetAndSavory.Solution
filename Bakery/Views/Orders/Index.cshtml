@{
  Layout = "_Layout";
}

@using Bakery.Models;

<span class="header-style"><h1>All Orders</h1></span>

@if (@Model.Count == 0)
{
  <h3>No orders have been added.</h3>
} 
else
{
  <ul>
    @foreach (Order order in Model)
    {
      <li>@Html.ActionLink($"{order.Customer}", "Details", new { id = order.OrderId })</li>
    }
  </ul>
}

<hr>

@using (Html.BeginForm("Search","Orders")) {
<label class="mdl-textfield__label" for="sample3">Search All Orders By Customer:</label>
<br>
<input class="mdl-textfield__input" type="text" name="search" id="sample3"><br><br>
<input type="submit" class="button" name = "search" value="Search Orders"/>
}

<hr>

<p>@Html.ActionLink("Add a new order", "Create") | @Html.ActionLink("Home", "Index", "Home")</p>